<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    
  </div>

  <%= f.label :content, :label => "Contenido" %>

      <div class="form-group">
          
          <%= f.text_area :content, class: "wysihtml5 form-control", style:"width: 810px; height: 200px;" %>
      </div> 

      <script type="text/javascript">
          $('.wysihtml5').ready(function(){

          $('.wysihtml5').each(function(i, elem) {
          $(elem).wysihtml5();
          });
        

         })
         </script><br/> 

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
